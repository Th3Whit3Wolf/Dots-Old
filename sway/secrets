bar {
    id bar-0
	font pango: Source Code Pro 8
	pango_markup enabled
	height 15
	position bottom
	binding_mode_indicator yes
	workspace_buttons yes
	strip_workspace_numbers no
    strip_workspace_name yes
	status_command while ~/.config/scripts/status.sh; do sleep 1; done
	#swaybar_command waybar
	gaps 5 10 10 10
 	font pango:'Font Awesome 5 Brands-Regular-400' 10

	colors {
        # Text color of status bar
        statusline #a3a3a3
        # Background of status bar
        background #292b2e

        #<WORKSPACES>            <BORDER>      <BACKGROUND>	   <TEXT>
        focused_workspace	    #292b2e			#5d4d7a			#a3a3a3
        inactive_workspace	    #00000000		#00000000		#a3a3a3
        binding_mode			#292b2e			#a31db1        	#a3a3a3
    }
}


